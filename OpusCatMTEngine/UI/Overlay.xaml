<Window x:Class="OpusCatMTEngine.Overlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpusCatMTEngine"
        mc:Ignorable="d"
        Title="Overlay" Height="450" Width="800"
        Topmost="{Binding IsChecked,ElementName=TopmostBox}">
    <StackPanel>
        <RichTextBox IsReadOnlyCaretVisible="True" IsReadOnly="True" Name="TranslationBox" Height="150"></RichTextBox>
        <CheckBox Name="TopmostBox" IsChecked="False">Show overlay on top</CheckBox>
    </StackPanel>
</Window>

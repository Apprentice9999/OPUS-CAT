<UserControl x:Class="FiskmoTranslationProvider.FiskmoOptionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FiskmoTranslationProvider"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <DockPanel>
                <Label>MT service port (1024-65535)</Label>
                <TextBox Name="ServicePortBoxElement" Text="{Binding Path=ServicePortBox, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, Mode=TwoWay}" PreviewTextInput="ServicePortBox_PreviewTextInput" VerticalAlignment="Center"></TextBox>
            </DockPanel>
            <DockPanel>
                <Label>Pregenerate MT</Label>
                <CheckBox IsEnabled="{Binding Path=PregenerateMt, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            </DockPanel>
            <DockPanel>
                <Label>Show MT as origin</Label>
                <CheckBox IsEnabled="{Binding Path=ShowMtAsOrigin, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            </DockPanel>
            <DockPanel>
                <Button HorizontalAlignment="Left" Width="100" Click="save_Click">Save</Button>
                <Button HorizontalAlignment="Left" Width="100" Click="cancel_Click">Cancel</Button>
            </DockPanel>
        </StackPanel>
    </Grid>
</UserControl>
